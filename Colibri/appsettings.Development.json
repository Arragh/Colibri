{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ColibriSettings": {
    "Authorization": {
      "Policies": [
        {
          "PolicyId": "Trololo",
          "TokenKey": "secret-key"
        }
      ]
    },
    "Routing": {
      "Clusters": [
        {
          "Protocol": "Http",
          "Authorize": {
            "Required": true,
            "PolicyId": "Trololo",
            "Roles": [
              "admin"
            ]
          },
          "Hosts": [
            "http://192.168.1.102:6000",
            "http://192.168.1.101:6000"
          ],
          "Routes": [
            {
              "Method": "GET",
              "UpstreamPattern": "/test1/get",
              "DownstreamPattern": "/get"
            },
            {
              "Method": "GET",
              "UpstreamPattern": "/test1/users/{id}/info/{trololo}",
              "DownstreamPattern": "/users/{id}/info/{trololo}"
            },
            {
              "Method": "GET",
              "UpstreamPattern": "/test1/users/me/info",
              "DownstreamPattern": "/users/me/info"
            },
            {
              "Method": "POST",
              "UpstreamPattern": "/test1/users/{id}/info",
              "DownstreamPattern": "/users/{id}/info"
            },
            {
              "Method": "DELETE",
              "UpstreamPattern": "/get/del",
              "DownstreamPattern": "/get/del"
            }
          ]
        },
        {
          "Protocol": "Http",
          "Hosts": [
            "http://192.168.1.102:6002",
            "http://192.168.1.101:6002"
          ],
          "Routes": [
            {
              "Method": "POST",
              "UpstreamPattern": "/test2/post",
              "DownstreamPattern": "/post"
            }
          ]
        }
      ]
    }
  }
}